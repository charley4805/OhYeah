<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".ui.auth.SignupActivity"
            android:background="@drawable/spiral_login">

<RelativeLayout
        android:layout_marginVertical="45dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:ignore="MissingConstraints">

    <ImageView
               android:layout_marginTop="45dp"
               android:id="@+id/imageView"
               android:layout_centerHorizontal="true"
               android:background="@drawable/ic_public_black_24dp"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:padding="16dp"/>

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_below="@+id/imageView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Oh Yeah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
            android:textColor="#FFFFFF"
            android:padding="26dp"
            />



        <EditText
                android:inputType="textPersonName"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_mood_black_24dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:selectAllOnFocus="true"/>



        <EditText
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_menu_send"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:selectAllOnFocus="true"/>



        <EditText
            android:inputType="textPassword"
            android:hint="@string/password"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="#FFFFFF"/>

        <EditText
                android:inputType="textPassword"
                android:hint="confirm password"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="#FFFFFF"/>

        <TextView
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:textSize="18sp"
                android:background="#17202A"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Forgot Password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:visibility="visible"/>



        <Button

                android:textAllCaps="false"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sign Up"
                android:background="#17A589"/>



       </LinearLayout>

   </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>